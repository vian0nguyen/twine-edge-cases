@import url('https://fonts.googleapis.com/css?family=Open+Sans|Raleway|Nunito');	//how to import fonts


tw-story{
  background-color:#A1E2EA;	//general story color and look
  font-family: 'Nunito', sans-serif;
  font-size: 28px;
  color: #FFFFFF
}

tw-story[tags~= "start"]{	//only applies to certain page w/tags
  background-color: #F9AAA3;
  font-size: 40px;
}

tw-link{			//changes link color
  color:darkblue;

}

tw-link:hover{			//changes mouse over link color
  color:orange
}



